.player-block {
  position: relative;
}
.player-lightbox {
  position: absolute;
  top: 0;
  left: -80%;
  padding: 0;
  width: 90vw;
  height: 100%;
  margin-left: 0;
  color: $colorWhite;
  text-align: center;
  background-color: $colorBlack;
  border-radius: 5px;
  z-index: 9999;
  overflow: hidden;
  opacity: 0;
  display: none;

  -webkit-transition: width $timing $easing;
  -moz-transition: width $timing $easing;
  -ms-transition: width $timing $easing;
  -o-transition: width $timing $easing;
  transition: width $timing $easing;

  .video-js {
    top: -10%;
  }
}
.player-show {
  //-webkit-box-shadow: 10px 10px 10px 10px rgba(151, 151, 151, .7);
  //box-shadow: 10px 10px 10px 10px rgba(151, 151, 151, .7);
}
.player-hide {
  padding: 0;
}
.player-close {
  color: #63A7CE;
  cursor: pointer;
  margin-top: -2px;
  text-align: right;
  width: 90%;
}
@media all and (min-width: 641px) {
  .player-lightbox {
    position: fixed;
    left: 0;
    top: 0;
  }
}

@media all and (min-width: 641px) {
  .vjs-control-bar {
    display: none !important;
  }
}

.enter-on-canvas {
  -webkit-backface-visibility: hidden;
  cursor: pointer;
  display: block;
  position: absolute;
  background: rgba(0,0,0,0.2);
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1005;
  -webkit-tap-highlight-color: transparent;
  width: 7em;
  box-shadow: -6px 0 6px rgba(0,0,0,0.45) inset;

  -webkit-transition: background $timing $easing;
  -moz-transition: background $timing $easing;
  -ms-transition: background $timing $easing;
  -o-transition: background $timing $easing;
  transition: background $timing $easing;
}


