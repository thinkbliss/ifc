.trailer-drawer {
  h3 {
    color: $colorWhite;
  }

  .button {
    color: $colorWhite;
    border-color: $colorWhite;
  }

  .trailer {
    position: relative;

    > .row {
      min-height: 40px;
      margin-bottom: 1em;
    }

    h3 {
      margin-top: 0.6em;
      margin-bottom: 1.2em;
      line-height: 1.2;
    }

    .button-container {
      position: absolute;
      bottom: 1.2em;
      right: 0;

      .button {
        margin: 0;
      }
    }
  }

  .trailer-poster {
    background: url('./../images/icons/play-trailer.png') center no-repeat;
    background-size: 40px 40px;
    cursor: pointer;
    margin-bottom: 0.75em;

    img {
      position: relative;
      z-index: -1;
    }
  }

  .mobile-title {
    margin-top: 1em;
    margin-bottom: 2em;
  }
}
@media all and (min-width: 641px) {
  .trailer-drawer {
    //height: 100vh;
    overflow: hidden;

    .drawer-bg {
      background: url('./../images/single/single1.jpg') repeat-x 0 0;
      background-size: cover;
      height: 100vh;
      width: 100%;
    }

    .trailer-drawer-ui {
      .trailer-drawer-info {
        position: absolute;
        bottom: 0;
        padding: 0 4em;
        margin-bottom: 1em;

        > .row {
          margin-bottom: 0.6em;
        }

        h2 {
          line-height: 1;
        }

        h2, h4 {
          color: $colorWhite;
        }

        .right {
          margin-top: 0.5em;
        }

        .learn {
          margin-right: 0.5em;
        }

        .share {
          &:before {
            font-family: bc-share-icons;
            content: '\e805';
          }
        }
      }

      .trailer-drawer-nav {
        //padding: 0 4em;
        margin-top: 2em;

        a {
          &:hover, &:focus {
            opacity: 0.66;

            .text {
              opacity: 0.66;
            }
          }
        }

        h3 {
          margin-top: -0.2em;
        }

        .text {
          margin: 0 1.7em;
        }

        .left-arrow-icon, .right-arrow-icon {
          margin-top: 0.7em;
        }
      }
    }
  }
}

.drawer-info-container {
  position: fixed;
  margin-left: -26.7em;
  left: 0vw;
  z-index: 1004;
  bottom: 31em;
  -webkit-transform: rotateZ(-90deg);
  -moz-transform: rotateZ(-90deg);
  -ms-transform: rotateZ(-90deg);
  -o-transform: rotateZ(-90deg);
  transform: rotateZ(-90deg);

  .drawer-info {
    width: 60em;

    h2, h4 {
      color: $colorWhite;
    }

    h2 {
      margin-bottom: -0.2em;
    }

    h4 {
      margin-top: 0;
      letter-spacing: 2px;
      font-size: 0.90rem;
    }
  }
}

